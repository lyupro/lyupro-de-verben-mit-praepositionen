{
  "name": "de.loc",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "mocha",
    "test:unit": "mocha test/models/**/*.test.js test/middleware/**/*.test.js",
    "test:api": "mocha test/routes/**/*.test.js",
    "test:integration": "mocha test/integration/**/*.test.js",
    "test:auth": "mocha test/routes/auth.test.js test/middleware/auth.test.js",
    "test:user": "mocha test/routes/user.test.js test/models/user*.test.js",
    "test:coverage": "nyc npm test",
    "test:watch": "mocha --watch",
    "test:debug": "mocha --inspect-brk",
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "health-check": "node test/utils/env-checker.js",
    "health-check:prod": "NODE_ENV=production node test/utils/env-checker.js",
    "seed-verbs_sentences-a-present-ru": "node seeds/seed-verbs_sentences.js a present ru",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "import:full": "node seeds/fullDatabaseImporter.js",
    "clean:db": "node seeds/dbCleaner.js",
    "db:stats": "node -e \"import('./utils/dbSeederUtils.js').then(async ({connectToDatabase, disconnectFromDatabase, getDatabaseStats, formatStats}) => {await connectToDatabase(); const stats = await getDatabaseStats(); console.log(formatStats(stats)); await disconnectFromDatabase();})\"",
    "prestart:prod": "npm run build && npm run health-check:prod",
    "deploy": "npm run test && npm run build && npm run health-check:prod"
  },
  "keywords": [],
  "author": "Maksym Lyubachevsky <m.lyubachevsky@gmail.com>",
  "license": "ISC",
  "description": "DE Word Trainer",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "babel-loader": "^9.1.3",
    "chai": "^5.1.1",
    "eslint": "^8.0.0",
    "esm": "^3.2.25",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "supertest": "^7.1.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.3",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^6.12.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^8.2.2",
    "winston": "^3.11.0"
  },
  "nyc": {
    "include": [
      "routes/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "controllers/**/*.js"
    ],
    "exclude": [
      "test/**/*.js",
      "public/**/*.js",
      "seeds/**/*.js",
      "utils/**/*.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "./coverage"
  }
}
