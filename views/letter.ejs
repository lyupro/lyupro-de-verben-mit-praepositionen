<!-- views/letter.ejs -->
<div class="verbs">
    <% verbs.forEach(verb => { %>
        <div class="card">
            <div class="card-front">
                <h2><%= verb.verb %></h2>
            </div>
            <div class="card-back">
                <h2><%= verb.translation %></h2>
                <a href="/verbs/letter/<%= verb.verb.charAt(0).toUpperCase() %>/<%= verb.verb %>">Подробнее</a>
            </div>
        </div>
    <% }) %>
</div>

<%- include('partials/verbs/pagination', { currentPage: currentPage, totalPages: totalPages, letter: letter }) %>