<form action="<%= getNamedRoute('verbs.store') %>" method="POST">
    <div class="form-group">
        <label for="verb">Глагол:</label>
        <input type="text" class="form-control" id="verb" name="verb" required>
    </div>

    <div class="form-group">
        <label for="letter">Буква:</label>
        <input type="text" class="form-control" id="letter" name="letter" required>
    </div>

    <!-- Остальной код формы создания глагола, аналогичный verbDetailsEdit.ejs -->

    <button type="submit" class="btn btn-primary">Создать глагол</button>
</form>