<!-- views/partials/header.ejs -->
<header>
    <nav class="container">
        <div class="header-left">
            <ul>
                <li><strong>Deutsch Trainer</strong></li>
            </ul>
        </div>
        <div class="header-right">
            <ul>
                <li><a href="/">Главная</a></li>
                <li><a href="/verb">Случайный Глагол</a></li>
                <li><a href="/verbs">Глаголы</a></li>
                <li><a href="/about">О нас</a></li>
                <% if (locals.user && (locals.user.role === 'administrator' || locals.user.role === 'moderator')) { %>
                    <li><a href="/admin/view">Админ-панель</a></li>
                <% } %>
                
                <!-- Пользовательское меню -->
                <li class="user-menu">
                    <span id="user-info" style="display: none;">
                        Привет, <span id="username"></span>!
                        <a href="/user/profile">Профиль</a>
                        <button id="logout-btn" class="btn btn-secondary">Выйти</button>
                    </span>
                    <span id="guest-info">
                        <a href="/auth/login" class="btn btn-primary">Вход</a>
                        <a href="/auth/register" class="btn btn-secondary">Регистрация</a>
                    </span>
                </li>
            </ul>
            <div class="theme-switch-container">
                <label class="theme-switch">
                    <input type="checkbox" id="theme-switch-toggle">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
    </nav>
</header>

<script src="/javascripts/dist/authHeader.bundle.js"></script>