<!-- views/newVerb.ejs -->
<%- include('layouts/verbLayout', {
    title: 'Добавление нового глагола',
    verbStyles: true,
    verbScripts: true,
    pageHeader: 'Добавление нового глагола',
    content: `
        <form action="/editVerb" method="POST">
            <div class="form-group">
                <label for="verb">Глагол:</label>
                <input type="text" class="form-control" id="verb" name="verb" required>
            </div>
            <div class="form-group">
                <label for="translation">Перевод:</label>
                <input type="text" class="form-control" id="translation" name="translation" required>
            </div>
            <div class="form-group">
                <label for="sentences">Предложения (каждое с новой строки):</label>
                <textarea class="form-control" id="sentences" name="sentences" rows="5" required></textarea>
            </div>
            <div class="form-group">
                <label for="sentencesTranslation">Перевод предложений (каждый с новой строки):</label>
                <textarea class="form-control" id="sentencesTranslation" name="sentencesTranslation" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Добавить глагол</button>
        </form>
    `
}) %>