<!-- views/error.ejs -->
<%- include('layout', {
    title: 'Ошибка',
    content: `
        <div class="container">
            <h1>Ошибка</h1>
            <p>${message}</p>
            <p>Статус: ${statusCode}</p>
            ${stack ? `<pre>${stack}</pre>` : ''}
            <a href="/" class="btn btn-primary">Вернуться на главную страницу</a>
        </div>
    `
}) %>